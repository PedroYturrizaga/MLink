$light     = 'OpenSansLight'
$regular   = 'OpenSansRegular'
$medium    = 'OpenSansMedium'
$bold      = 'OpenSansBold'
$color     = #2799FA
flexCenter()
	display flex
	display -webkit-flex
	align-items center
flexStart()
	display flex
	display -webkit-flex
	align-items start
flexEnd()
	display flex
	display -webkit-flex
	align-items flex-end
transitionOpacity()
	-webkit-transition opacity .3s linear
	-moz-transition opacity .3s linear
	-ms-transition opacity .3s linear
	-o-transition opacity .3s linear
	transition opacity .3s linear
transitionWidth()
	-webkit-transition width .3s linear
	-moz-transition width .3s linear
	-ms-transition width .3s linear
	-o-transition width .3s linear
	transition width .3s linear
transitionMaxWidth()
	-webkit-transition max-width .3s linear
	-moz-transition max-width .3s linear
	-ms-transition max-width .3s linear
	-o-transition max-width .3s linear
	transition max-width .3s linear
transitionBgColor()
	-webkit-transition background-color .3s linear
	-moz-transition background-color .3s linear
	-ms-transition background-color .3s linear
	-o-transition background-color .3s linear
	transition background-color .3s linear
transitionTransform()
	-webkit-transition transform .3s linear
	-moz-transition transform .3s linear
	-ms-transition transform .3s linear
	-o-transition transform .3s linear
	transition transform .3s linear
absolute()
	position absolute
	top 0
	left 0
	right 0
	bottom 0
relative()
	position relative
	top 0
	left 0
	right 0
	bottom 0
flipCard()
	-moz-backface-visibility hidden
	-webkit-backface-visibility hidden
	backface-visibility hidden
	-webkit-transition -webkit-transform 500ms
	-moz-transition -moz-transform 500ms
	-o-transition -o-transform 500ms
	transition transform 500ms
	border-radius 5px
	position absolute
flipCardFront()
	-webkit-transform perspective(600) rotateY(0)
	-moz-transform perspective(600) rotateY(0)
	-o-transform perspective(600) rotateY(0)
	transform perspective(600) rotateY(0)
flipCardBack()
	-webkit-transform rotateY(-180deg)
	-moz-transform rotateY(-180deg)
	-o-transform rotateY(-180deg)
	transform rotateY(-180deg)
	z-index 900
flipCardFrontHover()
	-webkit-transform rotateY(180deg)
	-moz-transform rotateY(180deg)
	-o-transform rotateY(180deg)
	transform rotateY(180deg)
	-webkit-transform perspective(600) rotateY(180deg)
	-moz-transform perspective(600) rotateY(180deg)
	-o-transform perspective(600) rotateY(180deg)
	transform perspective(600) rotateY(180deg)
flipCardBackHover()
	-webkit-transform rotateY(0)
	-moz-transform rotateY(0)
	-o-transform rotateY(0)
	transform rotateY(0)
	-webkit-transform perspective(600) rotateY(0)
	-moz-transform perspective(600) rotateY(0)
	-o-transform perspective(600) rotateY(0)
	transform perspective(600) rotateY(0)
	z-index 950
body
	margin 0
	padding 0
	color #000000
	font-family $regular
	background-color #FFFFFF
p
	margin 0
h2
	margin 20px 0
label
	font-weight 100
.js-section
	position relative;
	padding 40px 20px;
.js-title
	width 100%
	margin 10px 0
	font-size 36px
	line-height 34px;
	font-family $medium
.js-height
	height 100vh
.js-flex
	flexEnd()
	img
		width 100%
		max-width 130px
	.js-flex__left
		flexCenter()
		width 100%
		text-align left
		strong
			font-size 40px
			line-height 40px
			color #707070
			font-family $bold
	.js-flex__right
		width 100%
		h2
			font-size 18px
			line-height 22px
			margin 5px 0
			color #707070
			font-family $bold
		p
			font-size 14px
			line-height 18px
.js-container
	transitionMaxWidth()
	width 100%
	max-width 1150px
	height 100%
	margin auto
	position relative
	&.js-flex
		justify-content flex-end
.js-input
	padding 7px 20px
	height 72px
	margin 0
	border 1px solid rgba(0,0,0,0.15)
	background-color #FFFFFF
	margin-bottom -1px
	color #333333
	margin 5px 0
	&.js-date
		height 100%
		padding 5px 20px
		.js-icon
			width 100%
			max-width 36px
			text-align center
	&.js-file
		height 100%
	&.js-radio
		height 100%
		.mdl-radio
			width 100%
			.mdl-radio__inner-circle
				background $default
			&.is-checked
				.mdl-radio__outer-circle
					border 2px solid $default
			.mdl-radio__ripple-container 
				.mdl-ripple
					background $default
	&.js-select
		padding 0
		height 100%
		.bootstrap-select
			.dropdown-toggle
				padding 14px 24px
				border-radius 0
				box-shadow none
				background-color transparent
			.dropdown-menu
				background-color rgba(248, 248, 248, 0.95)
				border-radius 0
				margin 0 
				padding 0
				&.open
					margin 0
					padding 0
					li
						a
							padding 6px 20px
							&:hover
								background-color rgba(221,221,221,0.5)
	label
		font-family $light
		color #666666
		cursor pointer
	input
		display block
		height 36px
		width 100%
		border none
		font-size 16px
		&:focus
			outline 0
	&.input-focused
		background-color #FFFFFF
	.bootstrap-select
		width 100% !important
		.dropdown-toggle
			border none !important
			padding 6px 0
			selectTransparent()
			&:focus
				outline: 0 !important
.js-button
	margin 10px 0
	text-transform initial
	font-family $medium
	color #FFFFFF
	background-color $default !important
	border-radius 0
	font-size 18px
	box-shadow none
	border 2px solid $default
	margin 5px
	&:hover
		box-shadow 0px 0px 0px 2px $default
	&.js-button--default
		background-color transparent !important
		color #000000
	&.js-button--login
		width 100%
		margin 20px 0
.js-table
	h2
		font-size 30px
		line-height 32px
		font-family $medium
.js-excel
	background-color $default !important
	color #FFFFFF !important
.js-tabs
	flexCenter()
	border none
	margin 15px 0
	padding 5px 0
	border-top 1px solid #000000
	&>li
		margin 3px
		width 100%
		&.active
			&>a
				background-color $color
				color #FFFFFF
				border none
				&:hover
					background-color $color
					color #FFFFFF
		&>a
			transitionBgColor()
			border none !important
			border-radius 0
			background-color #5C5C5C
			color #FFFFFF
			text-align center
			font-family $medium
			&:HOVER
				background-color $color
			span
				display block
				width 100%
.js-panel
	background-color #E6E6E6
	padding 15px
	margin-top 10px
	&>.tab-pane
		background-color #FFFFFF
/*TABLE*/
table
	&>tbody
		&>tr
			&>td
				color #000000
				padding 7px 10px !important
				line-height 16px !important
				vertical-align middle !important
				border none !important
	&>thead
		&>tr
			&>th
				color #000000
				font-weight 100 !important
				font-size 16px
				border none !important
				font-family $bold
/*MATERIAL*/
.mdl-card
	width 100%
	.mdl-card__title
		display block
		h2
			margin 10px 0
			font-size 26px
			line-height 28px
			font-family $medium
		p
			font-size 16px
			line-height 18px
	.mdl-card__supporting-text
		width 100%
		h3
			margin 10px 0
			line-height 26px
			font-size 24px
			font-family $regular
		p
			font-size 16px
			line-height 18px
		small
			margin-top 10px
			display block
	.mdl-card__actions
		padding 16px
		text-align right
.mdl-layout__container
	position fixed
	.mdl-layout__drawer
		background-color $color
		color #FFFFFF
		.mdl-layout-title
			text-align center
			padding 0
		.mdl-navigation
			.mdl-navigation__link
				padding 16px 30px
				text-decoration none
				color #FFFFFF
				cursor pointer
				&:HOVER
					background-color #384854
				&.active
					background-color #384854
					pointer-events none
/*SCROLL*/
::-webkit-scrollbar
	width 6px
	height 5px
::-webkit-scrollbar-track
	background-color transparent
	border-radius 10px
::-webkit-scrollbar-thumb
	background-color #AAAAAA
	border-radius 10px
			